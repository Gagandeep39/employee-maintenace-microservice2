
node {
    stage('Checkout') {
        checkout scm
    }
    stage('Preparation') {
            sh 'cd employee-eureka-server'
            sh 'ls'
            pom = readMavenPom file: 'pom.xml'
            sh 'echo pom.version'
            IMAGE = pom.artifactId
            VERSION = pom.version
            sh 'git rev-parse --short HEAD > .git/commit-id'
            commit_id = readFile('.git/commit-id').trim()
            sh 'chmod +x mvnw'
    }
    stage ('Compile Stage') {
            sh'./mvnw clean compile'
    }
}
